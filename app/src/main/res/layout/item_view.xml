<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:layout_gravity="center"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/problem_number"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/problem_number" />

    <TextView
        android:id="@+id/problem_name"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/problem_name"
        android:textColor="#36D06C" />

    <ImageView
        android:id="@+id/locked_or_not"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/locked_or_not"
        android:src="@drawable/ic_baseline_lock_open_24" />

</LinearLayout>